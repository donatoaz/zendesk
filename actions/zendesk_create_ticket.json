{
	"name": {
    "pt_BR": "criar um novo ticket no Zendesk",
    "en": "create a new ticket in Zendesk"
  },
  "action_key": "create_ticket",
  "description": {
    "pt_BR": "criar um novo ticket no Zendesk",
    "en": "create a new ticket in Zendesk"
  },
  "action_fields": {
  	"fields": [
      {
      	"key": "ticket.subject",
        "name": { "pt_BR": "assunto", "en": "subject" },
        "description": {
        	"pt_BR": "O assunto do ticket",
          "en": "The ticket subject"
        },
        "required": true,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string"
      },
      {
        "key": "requester.name",
        "name": {
          "pt_BR": "Nome do solicitante",
          "en": "Requester name"
        },
        "description": {
          "pt_BR": "Nome do solicitante do ticket",
          "en": "Ticket requester name"
        },
        "required": true,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
      {
        "key": "requester.email",
        "name": {
          "pt_BR": "Email do solicitante",
          "en": "Requester email"
        },
        "description": {
          "pt_BR": "Email do solicitante do ticket",
          "en": "Ticket requester email"
        },
        "required": true,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
      {
      	"key": "ticket.comment.body",
        "name": { "pt_BR": "comentário", "en": "comment" },
        "description": {
        	"pt_BR": "O comentário",
          "en": "The comment"
        },
        "required": true,
        "visible": true,
        "advanced": false,
        "field_type": "custom_textarea",
        "data_type": "string"
      },
      {
        "key": "ticket.assignee_id",
        "name": { "pt_BR": "Atribuído", "en": "Assignee" },
        "description": {
          "pt_BR": "Agente atribuído ao ticket",
          "en": "Ticket's assigned agent"
        },
        "label": {
          "pt_BR": "Atribuído",
          "en": "Assignee"
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
        "data_type": "integer",
        "list": {
          "type": "remote",
          "helper_method": "zendesk_agent_list"
        },
        "placeholder": {
          "pt_BR": "Selecione um agente",
          "en": "Select a agent"
        }
      },
			{
      	"key": "ticket.type",
        "name": { "pt_BR": "tipo", "en": "type" },
        "description": {
        	"pt_BR": "O tipo",
          "en": "The type"
        },
        "label": {
          "pt_BR": "Selecione o tipo",
          "en": "Select the type"
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
        "data_type": "string",
				"list": {
					"type": "local",
					"data": [
						{ "label": "Pergunta", "value": "question" },
						{ "label": "Incidente", "value": "incident" },
			    	{ "label": "Problema", "value": "problem" },
						{ "label": "Tarefa", "value": "task" }
			  	]
				},
        "placeholder": { "pt_BR": "-", "en": "-" }
      },
			{
      	"key": "ticket.priority",
        "name": { "pt_BR": "prioridade", "en": "priority" },
        "description": {
        	"pt_BR": "A prioridade",
          "en": "The priority"
        },
        "label": {
          "pt_BR": "Selecione a prioridade",
          "en": "Select the priority"
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
				"data_type": "string",
				"list": {
					"type": "local",
					"data": [
						{ "label": "Baixa", "value": "low" },
						{ "label": "Normal", "value": "normal" },
						{ "label": "Alta", "value": "high" },
						{ "label": "Urgente", "value": "urgent" }
			  	]
				},
        "placeholder": { "pt_BR": "-", "en": "-" }
      },
			{
      	"key": "ticket.status",
        "name": { "pt_BR": "status", "en": "status" },
        "description": {
        	"pt_BR": "O status",
          "en": "The status"
        },
        "label": {
          "pt_BR": "Selecione o status",
          "en": "Select the status"
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
				"data_type": "string",
				"list": {
					"type": "local",
					"data": [
						{ "label": "Novo", "value": "new" },
						{ "label": "Aberto", "value": "open" },
						{ "label": "Pendente", "value": "pending" },
						{ "label": "Em espera", "value": "hold" },
						{ "label": "Resolvido", "value": "solved" },
						{ "label": "Fechado", "value": "closed" }
			  	]
				},
        "placeholder": {
          "pt_BR": "Novo",
          "en": "new"
        }
      }
    ]
  },
  "request": {
  	"method_name": "/tickets.json",
    "json_api": true,
    "error_fields": ["error", "description"],
    "pre_hooks": {
      "hooks": [
        {
          "name": "Create or update end user",
          "request": {
            "verb": "post",
            "method_name": "/users/create_or_update.json",
            "json_api": true,
            "params": [
              { "field": "user.name", "value": "{requester.name}" },
              { "field": "user.email", "value": "{requester.email}" },
              { "field": "user.verified", "value": true }
            ]
          }
        }
      ],
      "append_fields": [
        {
          "field": "ticket.requester_id",
          "value": "{user.id}",
          "type": "integer"
        }
      ]
    }
  }
}
