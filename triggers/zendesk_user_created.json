{
  "name": {
    "pt_BR": "novo usuário criado",
    "en": "new user created"
  },
  "trigger_key": "user_created",
  "description": {
    "pt_BR": "A cada novo usuário criado",
    "en": "For each new user created"
  },
  "trigger_fields": {
    "type": "local",
    "fields": [
      {
        "key": "name",
        "name": {
          "pt_BR": "Nome",
          "en": "Name"
        },
        "description": {
          "pt_BR": "Nome do usuário",
          "en": "User name"
        },
        "field_type": "string"
      },
      {
        "key": "email",
        "name": {
          "pt_BR": "Email",
          "en": "Email"
        },
        "description": {
          "pt_BR": "Email do usuário",
          "en": "User email"
        },
        "field_type": "string"
      },
      {
        "key": "phone",
        "name": {
          "pt_BR": "Telefone",
          "en": "Phone"
        },
        "description": {
          "pt_BR": "Telefone do usuário",
          "en": "User phone"
        },
        "field_type": "string"
      },
      {
        "key": "locale",
        "name": {
          "pt_BR": "Localidade",
          "en": "Locale"
        },
        "description": {
          "pt_BR": "Localidade do usuário",
          "en": "User locale"
        },
        "field_type": "string"
      },
      {
        "key": "tags",
        "name": {
          "pt_BR": "Tags",
          "en": "Tags"
        },
        "description": {
          "pt_BR": "Tags do usuário",
          "en": "User tags"
        },
        "field_type": "string",
        "source": "source[:tags].join(%q(, ))"
      },
      {
        "key": "created_at",
        "name": {
          "pt_BR": "Data/hora de criação",
          "en": "Cretion datetime"
        },
        "description": {
          "pt_BR": "Data e hora de criação do usuário",
          "en": "User creation datetime"
        },
        "field_type": "datetime",
        "source": "format_date(source[:created_at], %q(%d/%m/%Y %H:%M:%S))"
      }
    ]
  },
  "trigger_type": "polling",
  "base_datetime_filter": {
    "field": "created_at",
    "format": "%Y-%m-%dT%H:%M:%S%:z"
  },
  "request": {
    "method_name": "/search.json",
    "params": {
      "query": "type:user role:end-user created>{base_datetime_filter}"
    },
    "response_field": "results"
  }
}
